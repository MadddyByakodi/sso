div(ng-controller='JobViewController as Job')
  .wrapper-md.bg-light.b-b
    h1.m-n.font-thin.h3
      | Positions /
      a(ui-sref='app.jobs.manage({jobId: Job.data.id})')  {{Job.data.role}} /
      a(ui-sref='app.job.view({jobId: Job.data.id})')  View JD
  .col-md-9.clearfix
    //- Job top cover container
    .col-sm-12.dker.no-padder
      .col-sm-7.no-padder.clearfix.m-t-xs
        .hbox
          .col.thumb-xl.text-center.bg-light.dker.wrapper-lg
            i.fa.fa-briefcase.fa-4x.wrapper-xs.text-white
          .col.bg-white.wrapper-xs
            .hbox
              .col.h3 {{Job.data.client_name}}Client Name
            .hbox
              .col.h4
                | {{Job.data.role}}
                i.btn.fa.fa-download(ng-click='App.downloadJob([Job.data.id])')
            .hbox
              .col
                .hox.h5.m-t-xs.text-muted
                  .col.v-middle
                    i.fa.fa-lg.fa-inr
                  .col.v-middle  &nbsp; {{Job.data.min_sal}}–{{Job.data.max_sal}} Lakhs
                .hbox.h5.m-t-xs.text-muted
                  .col.v-middle: i.fa.fa-lg.fa-map-marker
                  .col.v-middle  &nbsp; {{Job.data.job_location}}
              .col.clearfix
                .pull-right
                  .hbox.h5.m-t-xs.text-muted
                    .col.v-middle Total Applicants
                    .col.fa-2x 20{{Job.data.total_applicants}}
                  .hbox.h5.m-t-xs.text-muted
                    .col.v-middle Priority
                    .col.v-middle: .btn.btn-success.rounded {{Job.data.job_status}}
      .col-sm-5.clearfix.no-padder.m-t-xs
        .panel.panel-primary.m-l-xs.bg-white.no-border
          .panel-heading
          .panel-body.wrapper-xs
            .hbox
              .col.thumb-lg.clearfix
                .pull-right Experience: &nbsp;
              .col  {{Job.data.min_exp}}–{{Job.data.max_exp}} Years
            .hbox.padder-v
              .col.thumb-lg.clearfix
                .pull-right Qualifications: &nbsp;
              .col
                .pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='qualification in Job.data.qualifications' style='padding: 2px;' ng-if='Job.showAllQualification || $index < 6') {{skill}}
                a.pull-left(ng-click='Job.showAllQualification = !Job.showAllQualification')
                  span.font-bold.text-info-dker(ng-if='Job.showAllQualification') – Less
                  span.font-bold.text-info-dker(ng-if='!Job.showAllQualification') + More

    //- Job Responsibility
    .col-sm-12.no-padder.m-t-xs
      .panel.panel-primary.no-border.m-n
        .panel-heading Duties and Responsibility
        .panel-body.bg-light.dker {{Job.data.responsibility}}Kill bitch kill yo

    //- Job Details
    .col-sm-12.bg-white.m-t-xs
        .h5.text-black-dker.font-bold.m-t-xs About Us
        .line.line-dashed.b-b.line-lg.pull-in
        .h5.font-bold.m-t-xs.m-b-xs Skills
        .h6.clearfix
          .pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='skill in Job.data.skills' style='padding: 2px;' ng-if='Job.showAllSkill || $index < 6') {{skill}}
          a.pull-left(ng-click='Job.showAllSkill = !Job.showAllSkill')
            span.font-bold.text-info-dker(ng-if='Job.showAllSkill') – Less
            span.font-bold.text-info-dker(ng-if='!Job.showAllSkill') + More
        .line.line-dashed.b-b.line-lg.pull-in

    //- Job Information
    .col-sm-12.no-padder.m-t-xs
      .panel.panel-primary.no-border.m-n
        .panel-heading Information
        .panel-body
          .text-muted Model: 8.33%
          .h4.text-info-dker Sourcing
          .wrapper-xs
            .h5 Vacancy :
              span.text-muted  &nbsp; {{Job.data.vacancy}}
            .clearfix.m-t-xs
              span.h5.pull-left Target Educational Institutions: &nbsp;
              span.h6.pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='skill in Job.data.skills' style='padding: 2px;' ng-if='Job.showAllSkill || $index < 6')  {{skill}}
            .clearfix.m-t-xs
              span.h5.pull-left Target Industries: &nbsp;
              span.h6.pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='skill in Job.data.skills' style='padding: 2px;' ng-if='Job.showAllSkill || $index < 6')  {{skill}}
            .clearfix.m-t-xs
              span.h5.pull-left Target Companies: &nbsp;
              span.h6.pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='skill in Job.data.skills' style='padding: 2px;' ng-if='Job.showAllSkill || $index < 6')  {{skill}}

          .h4.text-info-dker Interview Address

  .col-md-3.no-padder.m-t-xs(ng-controller='JobCommentsController as Comments')
    .col-xs-12(style='max-height: 650px;overflow-x: hidden;overflow-y: scroll;background-color: #fff;overflow-wrap: break-word;')
      .hbox.b-b.padder-v(ng-repeat='comment in Comments.data | orderBy: "timestamp"')
        .col.text-center.thumb-sm
          .img-circle.bg-primary.dker.wrapper-xs.h3 {{comment.name[0].toUpperCase()}}
        .col.clearfix
          .col-xs-12
            .text-info-dker {{comment.name}}
            p {{comment.comment}}
            .text-muted.pull-right(title='{{comment.timestamp | date: "medium"}}') {{comment.timestamp | date: 'd MMM, h:mm a'}}
    form.form.form-validation.col-xs-12.wrapper-xs.bg-white(ng-submit='Comments.insert()' name='commentForm')
      .input-group
        input.form-control(type='text' name='comment' placeholder='enter to comment' required ng-model='Comments.post.comment')
        span.input-group-btn
          button.btn.btn-default(type='sumbit' ng-disabled='commentForm.$invalid')
            i.fa.fa-plus

