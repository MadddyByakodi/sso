div(ng-controller='JobViewController as Job')

  .wrapper-xs.bg-light.b-b(style='position: fixed;width: 100%;background: #fff; z-index: 3;')
    ul.nav.nav-pills.nav-sm
      li: label.i-checks.m-t-xs.m-b-none.m-l-lg
        i.m-r-none(ng-if='Applicant.applicants.length > 0')
      li(ng-repeat='bucket in Job.buckets' ui-sref-active="active")
        a(ui-sref='app.jobs.manage({bucket: bucket, jobId: Job.data.id })') {{bucket}}

  .wrapper-xs.bg-light.b-b(style='position: fixed; right: 0;background: #fff; z-index: 3;')
    ul.nav.nav-pills.nav-sm: li(ui-sref-active="active")
      a.h5.b-a.b-info.b-2x.text-info.font-bold(ui-sref='app.jobs.view({jobId: Job.data.id})') View JD

  .hbox.hbox-auto-sm.hbox-auto-xs
    .col.col-.clearfix.wrapper-xs

      //- Job top cover container
      .hbox.m-t-xl
        .col.w-sm.v-middle.bg-light.dker
          img.w-full(src='{{Job.data._root_.logo}}')
        .col.bg-white-only.wrapper-xs.clearfix
          div.m-b-xs.m-l-xs
            b.h3.m-b-xs {{Job.data.client_name}}

            //- Job status label
            .pull-right
              .label.wrapper-xs.bg-danger.lt(ng-if='Job.data.job_status === "Closed"')
                span.padder.h5 Closed
              .label.wrapper-xs.bg-success.dker(ng-if='!(Job.data.job_status === "Closed")')
                span.padder.h5 Open

            .h4 {{Job.data.role}}

          .pull-left.text-muted
            .h4.wrapper-xs
                i.fa.fa-lg.fa-inr.text-dark-lter
                | &nbsp; {{Job.data.min_sal}}–{{Job.data.max_sal}} Lakhs
            .h4.wrapper-xs
              i.fa.fa-lg.fa-map-marker.text-danger-lt
              | &nbsp; {{Job.data.job_location}}

      .panel.bg-white-only.b-t.h5: .panel-body.wrapper-sm
        .hbox(ng-if='Job.data.min_exp && Job.data.max_exp')
          .col.thumb-lg.clearfix: strong.pull-right Experience: &nbsp;
          .col  {{Job.data.min_exp}} – {{Job.data.max_exp}} Years

        .m-t-xs
        .hbox(ng-if='Job.data.degrees')
          .col.thumb-lg.clearfix: strong.pull-right Qualifications: &nbsp;
          .col: span {{Job.data.degrees.join(', ')}}

      //- Job Responsibility
      .col-sm-12.no-padder.m-t-xs(ng-if='Job.data.responsibility')
        .panel.no-border.m-n
          .w-full.wrapper-xs.bg-primary.lt: strong.m-l-xs Duties and Responsibility
          .panel-body.bg-light.dk(ng-bind-html="Job.responsibility" style='word-break: break-all;')

      //- Job Details
      .col-sm-12.bg-white-only.m-t-xs.wrapper-md
          div
            .h5.text-black-dker.font-bold.m-t-xs About Us
            .h4.text-info-dker.m-t-xs
              | {{Job.data.client_name}}
              i.text-muted(ng-if='Job.data._root_.min_emp && Job.data._root_.max_emp')
                |  ({{Job.data._root_.min_emp}} - {{Job.data._root_.max_emp}} Employee)
            .m-t-xs
            p.text-muted {{Job.data._root_.description}}
            p.text-muted(ng-if='Job.data._root_.website') Website: {{Job.data._root_.website}}
            p.text-muted
              a(ng-href='{{Job.data._root_.apple_store_link}}'): i.fa-lg.fa.fa-apple.wrapper-xs
              a(ng-href='{{Job.data._root_.playstore_link}}'): i.fa-lg.fa.fa-android.wrapper-xs
              a(ng-href='{{Job.data._root_.windiows_store_link}}'): i.fa-lg.fa.fa-windows.wrapper-xs

          .h4.m-t-xs.m-b-xs Skills
          .h6.clearfix
            .pull-left.b-a.b-info.text-info-dker.m-r-xs.m-b-xs.r(ng-repeat='skill in Job.data.skills' style='padding: 2px;' ng-if='Job.showAllSkill || $index < 6') {{skill}}
            a.pull-left(ng-if='Job.data.skills.length>6' ng-click='Job.showAllSkill = !Job.showAllSkill')
              span.font-bold.text-info-dker(ng-if='Job.showAllSkill') – Less
              span.font-bold.text-info-dker(ng-if='!Job.showAllSkill') + More


          .h4.m-t-xs.m-b-xs Working Days
          .h5.text-muted.clearfix {{Job.data.days_per_week}} Days a Week ({{Job.data.start_work_time}} to {{Job.data.end_work_time}})
          .m-b-xs

        //- Job Information
        .m-t-xs: .panel.no-border.m-n
          .w-full.wrapper-xs.bg-primary.lt: strong.m-l-xs Information
          .panel-body
            .h4 Sourcing
            .wrapper-xs
              .h5 Vacancy :
                span.text-muted  &nbsp; {{Job.data.vacancy}}
              ul.padder
                li(ng-if='Job.data.institutes')
                  span.h5 Target Educational Institutions: &nbsp;
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                  span.h5.text-muted {{Job.data.institutes.join(', ')}}
                li(ng-if='Job.data.industries')
                  span.h5 Target Industries: &nbsp;
                  span.h5.text-muted {{Job.data.industries.join(', ')}}
                li(ng-if='Job.data.employers')
                  span.h5 Target Companies: &nbsp;
                  span.h5.text-muted {{Job.data.employers.join(', ')}}

            .m-t-xs(ng-if='Job.interview_addr')
              .h4.m-b-xs Interview Address
              .h5.text-muted(ng-bind-html="Job.interview_addr")

            .m-t-xs(ng-if='Job.interview_place_direction')
              .h4.m-b-xs Interview Place Direction
              .h5.text-muted(ng-bind-html="Job.interview_place_direction")

    .col.w-lg: .w-lg.nav-comment.m-t-xl(ng-controller='JobCommentsController as Comments')
      div(style='position: relative; height: 100%; width: 102%; top: 0; bottom: 50px; overflow-x: hidden; background-color: #fff; overflow-wrap: break-word;' scroll-to-bottom='Comments.ui.scrollToBottom')
        ul.list-group.no-bg.pull-in
          li.list-group-item(ng-repeat='comment in Comments.data | orderBy: "created_at"')
            a.pull-left.thumb-sm.m-r-md(href=''): .fa-stack.fa-2x.text-primary
              i.fa.fa-circle.fa-stack-2x
              span.fa.fa-stack-1x.h3.fa-inverse {{comment.user.name[0].toUpperCase()}}

            .clear
              .text-info-dker {{comment.user.name}}
              p {{comment.body}}
              .text-muted.pull-right(title='{{comment.created_at | date: "medium"}}') {{comment.created_at | date: 'd MMM, h:mm a'}}
        div(style='height: 20px;')
      form.form.form-validation.col-xs-12.wrapper-xs.bg-white(style='position: relative; height: 50px; width: 100%; bottom: 40px; background-color: #fff;' ng-submit='Comments.insert()' name='commentForm')
        .input-group
          input.form-control(type='text' name='comment' placeholder='enter to comment' required ng-model='Comments.post.comment')
          span.input-group-btn
            button.btn.btn-default(type='sumbit' ng-disabled='commentForm.$invalid')
              i.fa.fa-paper-plane

