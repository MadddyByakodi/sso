script(type='text/ng-template' id='navbar-profile-template.html')
  .wrapper-xs.bg-white-only
    .hbox
      .col.thumb-lg
        div.b-a.bg-light.text-center.m-l-md.m-t.b-info(
          style='border-radius: 50%;width:40px;height: 40px;'
          ng-click='$ctrl.isProfPopOpen = !$ctrl.isProfPopOpen;'
        )
          a.m-t-lg.text-info.font-lg.text-u-c(
            style='color: #5585B9;font-size: 26px;'
            ng-bind='::$ctrl.user.name.substr(0, 1)'
          )
      .col
        .w-full.text-ellipsis.m-t-xs.text-dark(
          ng-bind='::$ctrl.user.name'
          title='{{::$ctrl.user.name}}'
          ng-click='$ctrl.isProfPopOpen =!$ctrl.isProfPopOpen;')
        .w-full.text-ellipsis.m-t-xs.text-dark(
          ng-bind='::$ctrl.user.email'
          title='{{::$ctrl.user.email}}'
          ng-click='$ctrl.isProfPopOpen =!$ctrl.isProfPopOpen;')
        .w-full.m-t-xs: a.text-xs(
          ui-sref='settings.password-change'
          style='color: #4173a9'
          ng-click='$ctrl.isProfPopOpen =!$ctrl.isProfPopOpen;') Change Password
    .hbox
      .w-full.m-t-sm
        .w-full.wrapper-xs: a.text-sm.m-l-sm(ng-if='[2, 5].includes($ctrl.user.group_id)' href='/dashboard' style='color: #888;' ng-click='$ctrl.isProfPopOpen = !$ctrl.isProfPopOpen') Dashboard
      .col.w-full
        .w-full: a.m-t-sm.pull-right.btn.btn-sm.bg-gray.b-a.b-gray(
          ui-sref='logout'
          style='color: #333'
          ng-click='$ctrl.isProfPopOpen =!$ctrl.isProfPopOpen;') Logout
